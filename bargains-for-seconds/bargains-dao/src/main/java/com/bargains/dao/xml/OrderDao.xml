<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bargains.dao.OrderDao">

    <insert id="insertOrder" parameterType="orderEntity">

        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into
        orderEntity(productId,payAmount,userId,merchantId,createTime,payStatus,receivingAdress,receivingPhone,receivingName,tradeserialNumber,productQuantity)
        value(#{productId},#{payAmount},#{userId},#{merchantId},#{createTime},#{payStatus},#{receivingAdress},#{receivingPhone},#{receivingName},#{tradeserialNumber},#{productQuantity})
    </insert>

    <select id="queryOrderByUserId" parameterType="int" resultType="orderEntity">
        select * from orderEntity where userId = #{value}
    </select>

    <select id="queryOrderByMerchantId" parameterType="int" resultType="orderEntity">
        select * from orderEntity where merchantId = #{value}
    </select>


    <update id="updateOrderPayStatusById" parameterType="orderVo">
        update orderEntity set payStatus=#{customOrder.payStatus},payType=#{customOrder.payType} where
        id=#{customOrder.id}
    </update>

    <update id="updateOrderByTrNumber" parameterType="orderVo">
        update orderEntity set
        payStatus=#{customOrder.payStatus},payType=#{customOrder.payType},payTime=#{customOrder.payTime} where
        tradeserialNumber=#{customOrder.tradeserialNumber}
    </update>


</mapper>