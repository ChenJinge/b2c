<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bargains.dao.MerchantDao">

    <select id="queryMerchantById" parameterType="int" resultType="merchantEntity">
        select * from merchantEntity where id = #{value}
    </select>

    <insert id="insertMerchant" parameterType="merchantEntity">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into merchantEntity(name,shopName,account,password,sunScope)
        value(#{name},#{shopName},#{account},#{password},#{sunScope})
    </insert>

    <delete id="deleteMerchantById" parameterType="int">
        delete from merchantEntity where id = #{id}
    </delete>

    <update id="updateMerchant" parameterType="merchantEntity">
        update merchantEntity set
        name=#{name},shopName=#{shopName},account=#{account},password=#{password},sunScope=#{sunScope}
        where id=#{id}
    </update>

    <sql id="consutomsql">
        <if test="constomMerchant != null">
            <if test="constomMerchant.name!=null and constomMerchant.name!=''">
                and name = "${constomMerchant.name}"
            </if>
            <if test="constomMerchant.shopName!=null and constomMerchant.shopName!='' ">
                and shopName = "${constomMerchant.shopName}"
            </if>
            <if test="constomMerchant.account!=null and constomMerchant.account!='' ">
                and account = "${constomMerchant.account}"
            </if>
            <if test="constomMerchant.password!=null and constomMerchant.password!='' ">
                and constomMerchant.password = "${constomMerchant.password}"
            </if>
            <if test="constomMerchant.sunScope!=null and constomMerchant.sunScope!='' ">
                and sunScope = "${constomMerchant.sunScope}"
            </if>
        </if>
    </sql>

    <select id="queryMerchantByVo" parameterType="merchantVo" resultType="merchantEntity">
        select * from merchantEntity
        <where>
            <include refid="consutomsql"></include>
        </where>
    </select>

    <select id="queryMerchantByAccount" parameterType="java.lang.String" resultType="merchantEntity">
        select * from merchantEntity where account = #{value}
    </select>

</mapper>