<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bargains.dao.ProductDao">

    <insert id="insertProduct" parameterType="productEntity">

        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into
        productEntity(prodcutId,merchantId,originPlace,name,brandName,weight,specification,detailPicture)
        value(#{productId},#{merchantId},#{originPlace},#{name},#{brandName},#{weight},#{specification},#{detailPicture})
    </insert>

    <select id="queryProductById" parameterType="int" resultType="productEntity">
        select * from productEntity where productId = #{value}
    </select>

    <update id="updateProduct" parameterType="productEntity">
        update productEntity set
        originPlace=#{originPlace},name=#{name},brandName=#{brandName},weight=#{weight},specification=#{specification},detailPicture=#{detailPicture}
        where productId=#{productId}
    </update>

</mapper>