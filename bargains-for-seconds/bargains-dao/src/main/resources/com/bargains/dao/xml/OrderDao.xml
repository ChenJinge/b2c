<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bargains.dao.OrderDao">

    <insert id="insertOrder" parameterType="orderEntity">

        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into
        order (product_id,pay_amount,user_id,merchant_id,create_time,pay_status,receiving_adress,receiving_phone,receiving_name,trade_serial_number,product_quantity)
        value(#{productId},#{payAmount},#{userId},#{merchantId},#{createTime},#{payStatus},#{receivingAdress},#{receivingPhone},#{receivingName},#{tradeSerialNumber},#{productQuantity})
    </insert>

    <select id="queryOrderByUserId" parameterType="int" resultType="orderEntity">
        select * from order where user_id = #{value}
    </select>

    <select id="queryOrderByMerchantId" parameterType="int" resultType="orderEntity">
        select * from order where merchant_id = #{value}
    </select>


    <update id="updateOrderPayStatusById" parameterType="orderVo">
        update order set pay_status=#{customOrder.payStatus},pay_type=#{customOrder.payType} where
        id=#{customOrder.id}
    </update>

    <update id="updateOrderByTrNumber" parameterType="orderVo">
        update order set
        pay)_status=#{customOrder.payStatus},pay_type=#{customOrder.payType},pay_time=#{customOrder.payTime} where
        trade_serial_number=#{customOrder.tradeSerialNumber}
    </update>


</mapper>